section.form--container
	h2.form--header  Необходима консультация?
	p.form--desc оставьте заявку или свяжитесь с нами в социальных сетях
	.form--social
		a.form-socialItem(href="#" target="_blank")
			include ./../../assets/images/vk.svg
		a.form-socialItem(href="#" target="_blank")
			include ./../../assets/images/telegram.svg
		a.form-socialItem(href="#" target="_blank")
			include ./../../assets/images/instagram.svg
		a.form-socialItem(href="#" target="_blank")
			include ./../../assets/images/whatsapp.svg
	div.form--formWrapper
		p.form--pBold Для #[span консультации] заполните форму!
		p.form--pNormal С Вами свяжутся в ближайшее время 
		form(method="" )
			input.form--inputField(type="text" name="name" placeholder="Ваше имя" required)
			input.form--inputField(type="tel" name="phone" pattern="\+7\s?[\(]{0,1}9[0-9]{2}[\)]{0,1}\s?\d{3}[-]{0,1}\d{2}[-]{0,1}\d{2}" placeholder="Ваш телефон" required)
			button.form--btn(type="submit") отправить
	


